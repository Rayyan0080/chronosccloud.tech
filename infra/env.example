# ============================================
# Project Chronos - Infrastructure Environment Variables
# ============================================
# Copy this file to .env in the root directory and update with your values
# cp infra/env.example .env

# ============================================
# Message Broker (Local Development - NATS)
# ============================================
# NATS is used as a lightweight placeholder for local development.
# For production, migrate to Solace PubSub+ (see infra/README.md)
NATS_HOST=localhost
NATS_PORT=4222
NATS_MONITORING_PORT=8222

# ============================================
# Message Broker (Production - Solace PubSub+)
# ============================================
# Uncomment and configure when migrating to Solace
# SOLACE_HOST=your-solace-host.messaging.solace.cloud
# SOLACE_PORT=55555
# SOLACE_USERNAME=your-username
# SOLACE_PASSWORD=your-password
# SOLACE_VPN=default
# SOLACE_CLIENT_NAME=chronos-client

# ============================================
# MongoDB Database
# ============================================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=chronos
MONGO_PASS=chronos
MONGO_DB=chronos
MONGO_CONNECTION_STRING=mongodb://chronos:chronos@localhost:27017/chronos?authSource=admin

# MongoDB Express (Optional UI)
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASS=admin
MONGO_EXPRESS_PORT=8081

# ============================================
# Legacy Message Broker (RabbitMQ - Optional)
# ============================================
# Used in root docker-compose.yml
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# ============================================
# PostgreSQL Database (Legacy - Optional)
# ============================================
# Used in root docker-compose.yml
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=chronos
POSTGRES_PASS=chronos
POSTGRES_DB=chronos

# ============================================
# Redis Cache
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Service Ports
# ============================================
DASHBOARD_PORT=3000
API_GATEWAY_PORT=8080
VOICE_PORT=8001

# ============================================
# AI Service
# ============================================
AI_MODEL_PATH=./models
AI_USE_GPU=false
AI_SERVICE_PORT=8002

# ============================================
# Voice Service
# ============================================
VOICE_SAMPLE_RATE=16000
VOICE_BUFFER_SIZE=4096

# ============================================
# Agent Service
# ============================================
AGENT_POLL_INTERVAL=5000
AGENT_TIMEOUT=30000
AGENT_MAX_RETRIES=3

# ============================================
# QNX Service
# ============================================
QNX_ENDPOINT=http://localhost:8081
QNX_TIMEOUT=10000
QNX_RETRY_COUNT=3

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs

# ============================================
# Environment
# ============================================
NODE_ENV=development
PYTHON_ENV=development

# ============================================
# Feature Flags
# ============================================
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_MOCK_SERVICES=false

